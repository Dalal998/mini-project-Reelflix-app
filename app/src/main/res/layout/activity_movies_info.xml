<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c1c8d1"
    tools:context=".MoviesInfo">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="296dp"
        android:layout_height="92dp"
        android:src="@drawable/as5" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:elevation="2dp"
        android:radius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:orientation="horizontal"
            android:padding="9dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="9dp">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:text="Movie Title(1):"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:text="Rating: 10/10"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="235dp"
                    android:layout_height="31dp"
                    android:text="Year: 2014"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:text="Description: A thrilling adventure film."
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="151dp"
                android:layout_gravity="end"
                android:contentDescription="q6"
                android:src="@drawable/q6" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:elevation="2dp"
        android:radius="3dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="9dp">

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:text="Movie Title(2):"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv9"
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:text="Rating: 10/9.5"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                   android:id="@+id/tv14"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="15dp"
                   android:textStyle="bold"
                   android:text="Year:1990" />

                <TextView
                    android:id="@+id/tv10"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:text="Description:Family/Comedy."
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_gravity="end"
                android:contentDescription="p7"
                android:src="@drawable/p7" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:elevation="2dp"
        android:radius="3dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="9dp">


                <TextView
                    android:id="@+id/tv11"
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:text="Movie Title(3):"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv12"
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:text="Rating:10/8.5"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            <TextView
                android:id="@+id/tv15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Year:2021" />

                <TextView
                    android:id="@+id/tv13"
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:text="Description:Action/Sci-fi ."
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="136dp"
                android:layout_gravity="end"
                android:contentDescription="p8"
                android:src="@drawable/p8" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="Back"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/b3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Exit App"
        android:textSize="20dp"
        android:textStyle="italic" />

</LinearLayout>